---

<Layout title="SPA PARA EL ALMA - Guía de Contenido">
  <main class="container mx-auto px-4 py-8">
    <!-- Hero Section -->
    <section class="text-center mb-12">
      <h1 class="text-4xl font-bold text-[#888888] mb-4">Guía de Contenido</h1>
      <p class="text-xl text-gray-600">Estructura y tips para cada tipo de contenido</p>
    </section>

    <!-- Navegación -->
    <section class="mb-12">
      <div class="bg-[#c0dac7] p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-[#888888] mb-4">Tipos de Contenido</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {tiposContenido.map(tipo => (
            <a href={`#${tipo.id}`} class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
              <h3 class="text-lg font-semibold text-[#888888]">{tipo.titulo}</h3>
              <p class="text-gray-600 text-sm">{tipo.descripcion}</p>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Contenido Detallado -->
    {tiposContenido.map(tipo => (
      <section id={tipo.id} class="mb-12 scroll-mt-16">
        <div class="bg-[#c0dac7] p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-[#888888] mb-4">{tipo.titulo}</h2>
          <p class="text-gray-700 mb-4">{tipo.descripcion}</p>
          <p class="text-gray-700 mb-6"><span class="font-semibold">Objetivo:</span> {tipo.objetivo}</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div>
              <h3 class="text-xl font-semibold text-[#888888] mb-3">Estructura</h3>
              <ul class="space-y-2 text-gray-700">
                {tipo.estructura.map(item => (
                  <li class="flex items-start">
                    <span class="w-2 h-2 bg-[#888888] rounded-full mt-2 mr-2"></span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
            
            <div>
              <h3 class="text-xl font-semibold text-[#888888] mb-3">Tips</h3>
              <ul class="space-y-2 text-gray-700">
                {tipo.tips.map(tip => (
                  <li class="flex items-start">
                    <span class="w-2 h-2 bg-[#888888] rounded-full mt-2 mr-2"></span>
                    {tip}
                  </li>
                ))}
              </ul>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div>
              <h3 class="text-xl font-semibold text-[#888888] mb-3">Lista de Verificación</h3>
              <ul class="space-y-2 text-gray-700">
                {tipo.listaVerificacion.map(item => (
                  <li class="flex items-start">
                    <input type="checkbox" class="mt-1 mr-2" />
                    {item}
                  </li>
                ))}
              </ul>
            </div>

            <div>
              <h3 class="text-xl font-semibold text-[#888888] mb-3">Ejemplos de Temas</h3>
              <ul class="space-y-2 text-gray-700">
                {tipo.ejemplos.map(ejemplo => (
                  <li class="flex items-start">
                    <span class="w-2 h-2 bg-[#888888] rounded-full mt-2 mr-2"></span>
                    {ejemplo}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </section>
    ))}

    <!-- Lineamientos Generales -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-[#888888] mb-6">Lineamientos Generales</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-[#c0dac7] p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-[#888888] mb-4">Identidad Visual</h3>
          <ul class="space-y-2 text-gray-700">
            {lineamientosGenerales.identidadVisual.map(item => (
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#888888] rounded-full mt-2 mr-2"></span>
                {item}
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-[#c0dac7] p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-[#888888] mb-4">Tono de Voz</h3>
          <ul class="space-y-2 text-gray-700">
            {lineamientosGenerales.tonoVoz.map(item => (
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#888888] rounded-full mt-2 mr-2"></span>
                {item}
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-[#c0dac7] p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-[#888888] mb-4">Directrices de Contenido</h3>
          <ul class="space-y-2 text-gray-700">
            {lineamientosGenerales.directricesContenido.map(item => (
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#888888] rounded-full mt-2 mr-2"></span>
                {item}
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-[#c0dac7] p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-[#888888] mb-4">Mejores Prácticas</h3>
          <ul class="space-y-2 text-gray-700">
            {lineamientosGenerales.mejoresPracticas.map(item => (
              <li class="flex items-start">
                <span class="w-2 h-2 bg-[#888888] rounded-full mt-2 mr-2"></span>
                {item}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>
  </main>
</Layout>

